<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".syntax_three">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D291BC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:text="@string/syntax3"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/syntax33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:lineSpacingExtra="@dimen/line_spacing"
                android:padding="@dimen/padding"
                android:text="@string/delapanbelas"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/syntax34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/syntax33"
                android:paddingBottom="50dp"
                android:src="@drawable/duaempat"/>

            <TextView
                android:id="@+id/syntax35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/syntax34"
                android:padding="@dimen/padding"
                android:lineSpacingExtra="@dimen/line_spacing"
                android:text="@string/sembilanbelas"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <ImageView
                android:id="@+id/syntax36"
                android:layout_width="match_parent"
                android:layout_height="575dp"
                android:layout_above="@id/syntax35"
                android:paddingBottom="50dp"
                android:src="@drawable/dualima" />

            <TextView
                android:id="@+id/syntax37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/syntax36"
                android:padding="@dimen/padding"
                android:lineSpacingExtra="@dimen/line_spacing"
                android:text="@string/duapuluh"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <ImageView
                android:id="@+id/syntax38"
                android:layout_width="match_parent"
                android:layout_height="465dp"
                android:layout_above="@id/syntax37"
                android:paddingBottom="50dp"
                android:src="@drawable/duaenam" />

            <TextView
                android:id="@+id/syntax39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/syntax38"
                android:padding="@dimen/padding"
                android:lineSpacingExtra="@dimen/line_spacing"
                android:text="@string/duasatu"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <ImageView
                android:id="@+id/syntax40"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_above="@id/syntax39"
                android:paddingBottom="50dp"
                android:src="@drawable/duatujuh" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/link4"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp">

                    <Button
                        android:id="@+id/back_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/back"
                        android:textColor="@android:color/black"
                        android:background="@android:color/white"
                        android:onClick="back_one"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>